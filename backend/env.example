
# Server
PORT=5040

# Database (local dev recommended)
MONGODB_URL=mongodb://localhost:27017/timelyhub

# Gemini / Vertex AI / Google Generative API
# Get an API key / credentials from Google AI Studio or GCP (free trial quotas may apply).
GEMINI_API_KEY=
GEMINI_PROJECT=Timely-Hub
GEMINI_LOCATION=us-central1
GEMINI_MODEL=gemini-2.5-flash
GEMINI_BASE_URL=https://aiplatform.googleapis.com
GEMINI_MAX_TOKENS=512
GEMINI_FALLBACK_MODEL=gemini-2.5-flash

# Web search: DuckDuckGo Instant Answer (no API key required)
# NOTE: DuckDuckGo Instant Answer API is free but does not return a full SERP. Good for summaries and quick facts.
SEARCH_PROVIDER=duckduckgo
# If you later want to enable a paid provider as fallback (e.g., SERPAPI), add their key here:
# SERPAPI_KEY=
# SERPAPI_ENDPOINT=https://serpapi.com/search

# JWT
JWT_SECRET=change_me_use_long_random_string
JWT_EXPIRES_IN=7d

# OpenAI (required for quiz generation)
OPENAI_API_KEY=

# Cohere (optional)
COHERE_API_KEY=

# Cloudinary (required for uploads)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
CLOUDINARY_FOLDER=timelyhub

# Server
NODE_ENV=development
CORS_ORIGIN=https://timely-hub-frontend-paschal-vercel-pink.vercel.app

# Frontend
FRONTEND_URL=https://timely-hub-frontend-paschal-vercel-pink.vercel.app

# Email (required for email verification)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Uploads
UPLOAD_DIR=./uploads
MAX_ATTACHMENT_SIZE_BYTES=52428800

RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=60


# Rate limiting (local controls to help avoid overuse / cost)